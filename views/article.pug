extends layout
block content
	h1= article.title
	h5 Written by #{author}
	p= article.body
	hr
	if user
		if user._id == article.author
			a.btn.btn-success(href='/articles/edit/'+article._id) Edit
			a.btn.btn-danger.delete-article(href='#',data-id=article._id,style='margin-left:10px;') Delete