extends layout
block content
	h1 #{title}
	form(method='POST', action='/users/register')
		#form-group
			label Name
			input.form-control.col-sm-12.col-md-6.col-lg-6(name='name',type='text')
		#form-group
			label Email
			input.form-control.col-sm-12.col-md-6.col-lg-6(name='email',type='text')
		#form-group
			label Username
			input.form-control.col-sm-12.col-md-6.col-lg-6(name='username',type='text')
		#form-group
			label Password
			input.form-control.col-sm-12.col-md-6.col-lg-6(name='password',type='password',autocomplete='off')
		#form-group
			label Confirm Password
			input.form-control.col-sm-12.col-md-6.col-lg-6(name='confirm_password',type='password',autocomplete='off')
		br
		input.btn.btn-primary(type='submit',value='Submit')